<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:state_pressed="true" >
    <shape>
      <gradient
        android:startColor="@color/palette_12"
        android:endColor="@color/palette_11"
        android:angle="270" />
      <stroke
        android:width="3dp"
        android:color="@color/palette_11" />
      <corners
        android:radius="3dp" />
      <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
    </shape>
  </item>

  <item android:state_focused="true" >
    <shape>
      <gradient
        android:endColor="@color/palette_12"
        android:startColor="@color/palette_11"
        android:angle="270" />
      <stroke
        android:width="3dp"
        android:color="@color/palette_11" />
      <corners
        android:radius="3dp" />
      <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
    </shape>
  </item>

  <item>
    <shape>
      <gradient
        android:endColor="@color/mColorPrimary"
        android:startColor="@color/mColorPrimaryDark"
        android:angle="270" />
      <stroke
        android:width="3dp"
        android:color="@color/palette_11" />
      <corners
        android:radius="3dp" />
      <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
    </shape>
  </item>
</selector>